/* pages/order/order.wxss */
.container{
  display: block;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100vh;
}
.container .order{
  position: relative;
  width: 100%;
  height: 20vh;
  display: flex;
  flex-direction: column;
  background-color: #fcfcfc;
  padding: 10px;
  box-shadow: 0 0 4px #ddd;
  border-bottom: 1px solid #ddd;
}
.container .order .orderID{
  height: 20%;
  color: #ddd;
  font-weight: 600;
  padding-left: 5px;
  letter-spacing: 4px;
  border-left: 5px solid #73b899;
  font-size: 12px;
}
.container .order .orderInfo{
  height: 40%;
  color: #444;
  font-weight: 200;
  letter-spacing: 4px;
  font-size: 16px;
  text-align: center;
  line-height: 36px;
}
.container .order .buy{
  width: 50px;
  height: 20px;
  position: absolute;
  right: 30px;
  bottom: 10px;
  background-color:#bfe2e6 ;
  border-radius: 10px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  letter-spacing: 3px;
}